<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_clicked_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Sided Dice"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_clicked_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Sided Dice"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_clicked_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 Sided Dice"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_clicked_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Sided Dice"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_clicked_twelve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Sided Dice"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/radio_clicked_twenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Sided Dice"
                android:onClick="onRadioButtonClicked"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Number of sides: " />
            <EditText
                android:id="@+id/plain_text_input"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:focusable="auto"
                android:hint=""
                android:text=""
                android:inputType="number"/>

            <Button
                android:id="@+id/button_id"
                style="@style/myButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll Dice" />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:text="" />
        </RadioGroup>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>